<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="consumer.sample.service.google.shortener.request.class">Consumer\Sample\Service\Google\Shortener\Request</parameter>
        <parameter key="consumer.sample.service.google.shortener.response.class">Consumer\Sample\Service\Google\Shortener\Response</parameter>
        <parameter key="google.translate.identifier">[GOOGLE][SHORTENER]</parameter>
        <parameter key="google.shortener.request.headers" type="collection">
            <parameter key="Content-Type">application/json</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="google.shortener.request" class="%consumer.sample.service.google.shortener.request.class%">
            <argument>https://www.googleapis.com/</argument>
            <argument>/urlshortener/v1/url</argument>
            <argument>POST</argument>
            <argument>%google.shortener.request.headers%</argument>
        </service>
        <service id="google.shortener.response" class="%consumer.sample.service.google.shortener.response.class%">
            <argument type="service" id="consumer.hydrator.json"/>
        </service>
        <service id="google.shortener.logger.display" class="%log.logger.display.class%">
            <argument type="collection"></argument>
            <argument type="service" id="log.formatter.default" />
            <argument type="service" id="log.helper.id_generator.default" />
        </service>
        <service id="google.shortener.client" class="%consumer.client.rest.class%" />


        <service id="google.shortener" parent="consumer.service" public="true">
            <argument>%google.translate.identifier%</argument>
            <argument type="service" id="google.shortener.request" />
            <argument type="service" id="google.shortener.response" />
            <argument type="service" id="google.shortener.client" />
            <argument type="collection">
                <argument type="service" id="google.shortener.logger.display" />
            </argument>
        </service>

    </services>
</container>