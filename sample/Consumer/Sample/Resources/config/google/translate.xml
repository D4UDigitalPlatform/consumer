<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="consumer.sample.service.google.translate.request.class">Consumer\Sample\Service\Google\Translate\Request</parameter>
        <parameter key="consumer.sample.service.google.translate.response.class">Consumer\Sample\Service\Google\Translate\Response</parameter>
        <parameter key="google.translate.identifier">[GOOGLE][TRANSLATE]</parameter>
    </parameters>

    <services>
        <service id="google.translate.request" class="%consumer.sample.service.google.translate.request.class%">
            <argument>https://www.googleapis.com/</argument>
            <argument>/language/translate/v2</argument>
            <argument />
            <argument />
            <argument>AIzaSyCrjfvdQ-P1rVkTOcdLttdeh7-gkw5qYco</argument>
        </service>
        <service id="google.translate.response" class="%consumer.sample.service.google.translate.response.class%">
            <argument>json</argument>
        </service>
        <service id="google.translate.client" class="%consumer.client.rest.class%">


        </service>

        <service id="google.translate" class="%consumer.service.class%" public="true">
            <argument>%google.translate.identifier%</argument>
            <argument type="service" id="google.translate.request" />
            <argument type="service" id="google.translate.response" />
            <argument type="service" id="google.translate.client" />
        </service>

    </services>
</container>